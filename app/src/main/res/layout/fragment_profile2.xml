<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="22dp"
        android:gravity="center_horizontal">

        <!-- HEADER CARD: tarjeta blanca elevada -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@android:color/white">

            <LinearLayout
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Avatar (ID original preserved) -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profile_image"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profilenh"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeWidth="3dp"
                    app:strokeColor="@color/oxford_blue"
                    android:elevation="6dp" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Administrador Principal"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/oxford_blue"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="admin@nexthire.com"
                    android:textSize="14sp"
                    android:textColor="@color/yin_blue" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:text="Editar Perfil"
                    android:textColor="@android:color/white"
                    app:backgroundTint="@color/oxford_blue"
                    app:cornerRadius="40dp"
                    app:icon="@drawable/outline_edit_24"
                    app:iconTint="@android:color/white" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- INFO CARD -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:padding="18dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Información General"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/oxford_blue" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="#DADADA"/>

                <TextView
                    android:text="Teléfono: +505 5880 9914"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/oxford_blue"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:text="Rol: Administrador del sistema"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/oxford_blue"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:text="Último acceso: 15/09/2025, 10:35 AM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/oxford_blue"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:text="Centro: Nexthire - Managua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/oxford_blue"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- STATS ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginTop="20dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <!-- USERS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                android:layout_margin="6dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/profilee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/oxford_blue"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usuarios"
                        android:textSize="12sp"
                        android:textColor="@color/oxford_blue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- OFFERS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                android:layout_margin="6dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/briefcase" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/oxford_blue"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ofertas"
                        android:textSize="12sp"
                        android:textColor="@color/oxford_blue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- APPLICATIONS CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="120dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="3dp"
                android:layout_margin="6dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/group" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/oxford_blue"
                        android:layout_marginTop="6dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postulaciones"
                        android:textSize="12sp"
                        android:textColor="@color/oxford_blue"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
